<h1>Restaurants</h1>

<div class= "my-3">
  <%= link_to "Add a Restaurant", new_restaurant_path, class:"btn btn-outline-secondary" %>
  </div>

<div class="d-flex row">
  <% @restaurants.each do |restaurant| %>
  <div class="card m-3" style="width: 18rem;">
    <div class="card-body">
       <h5 class="card-title">
        <%= link_to restaurant.name, restaurant_path(restaurant), class: "linky" %>
      </h5>
      <h6 class="card-subtitle mb-2 text-muted"><%= restaurant.category.capitalize %></h6>
      <p class="card-text">
        <% sum = 0 %>
        <% i = 0 %>
        <% restaurant.reviews.each do |review| %>
          <% sum += review.rating %>
          <% i += 1 %>
        <% end %>
        <% if i != 0 %>
          <% prom = (sum/i) %>
          <%= "⭐️" * prom %>
        <% else %>
          <%= "Add your review" %>
        <% end %>
      </p>
    </div>
    </div>
  <% end %>
  </div>
